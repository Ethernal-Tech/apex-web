				{
					"name": "SubmitTx",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 400 because validity interval of the transaction passed\", () => {",
									"    pm.response.to.have.status(400);",
									"});",
									"",
									"pm.test(\"Response is JSON\", () => {",
									"    pm.response.to.be.json;",
									"});",
									"",
									"pm.test(\"Transaction is valid or expired TTL\", function () {",
									"    const jsonData = pm.response.json();",
									"",
									"    if(pm.response.code === 400) {",
									"        pm.expect(jsonData.error.code).to.be.oneOf([3118, 3124]); // expired TTL or vector testnet address missmach",
									"    } else {",
									"        pm.expect(pm.response.code).to.eql(200);",
									"    }",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
