	{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"assets": [
		{ 
			"include": "appConfig/**/*.json", 
			"outDir": "dist/src", 
			"watchAssets": true 
		},
		{ 
			"include": "mailer/templates/**/*", 
			"outDir": "dist/src" 
		}
		],
		"deleteOutDir": true
	}
	}